{
  "compilerOptions": {
    "target": "ES2020",
    "types": ["@webgpu/types"], // Enable WebGPU types in your TypeScript project.
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "Node", // "bundler" is default; Netlify deploy
    // "allowImportingTsExtensions": true, // Netlify deploy
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src"]
}
